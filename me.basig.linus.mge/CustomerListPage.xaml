<Page x:Class="me.basig.linus.mge.CustomerListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:me.basig.linus.mge"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <ListView Grid.Column="0" Name="customers">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="Name" Width="Auto" DisplayMemberBinding="{Binding Name}"/>
                <GridViewColumn Header="Email" Width="Auto" DisplayMemberBinding="{Binding Email}" />
                <GridViewColumn Header="Studenten Nummer" Width="Auto" DisplayMemberBinding="{Binding Studentnumber}"/>
            </GridView>
        </ListView.View>
    </ListView>
</Page>
